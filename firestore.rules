rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isTeamMember(teamId) {
      return isAuthenticated() && request.auth.uid in get(/databases/$(database)/documents/teams/$(teamId)).data.members;
    }
    
    function isTeamLeader(teamId) {
      return isAuthenticated() && get(/databases/$(database)/documents/teams/$(teamId)).data.leaderId == request.auth.uid;
    }
    
    // Kasutajate kogu reeglid
    match /users/{userId} {
      // Lubab autenditud kasutajatel lugeda kõiki profiile (edetabel)
      allow read: if isAuthenticated();
      
      // Lubab kasutajal lugeda ja muuta oma profiili
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
      
      // Lubab kasutajal uuendada oma profiili (sh väljad nagu questPhotos)
      allow update: if isAuthenticated() && request.auth.uid == userId;
      
      // Lubab kasutajal luua oma profiili
      allow create: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // Võistkondade (team) kogud
    match /teams/{teamId} {
      // Lubab kõigil autenditud kasutajatel tiime vaadata (liitumiseks on vaja koodi)
      allow read: if isAuthenticated();
      
      // Tiimi saab luua ainult kasutaja, kes märgitakse juhiks
      allow create: if isAuthenticated() && request.resource.data.leaderId == request.auth.uid;
      
      // Liitumiseks: kasutaja saab lisada enda members.{userId} väljale (veel pole liige)
      // Kontrollib, et kasutaja pole veel liige ja lisab ainult enda
      allow update: if isAuthenticated() && 
        !(request.auth.uid in resource.data.members) &&
        request.auth.uid in request.resource.data.members &&
        request.resource.data.members[request.auth.uid].role == 'member';
      
      // Uuendused ja kustutamine: vaid juht või kaaskapten (kui juba liige)
      allow update, delete: if isTeamMember(teamId) && (
        isTeamLeader(teamId) ||
        (request.auth.uid in resource.data.members && resource.data.members[request.auth.uid].role in ['leader', 'co_leader'])
      );
      
      // Aktiivsete missioonide alamkogu
      match /activeMissions/{missionId} {
        allow read: if isTeamMember(teamId);
        allow create: if isTeamLeader(teamId);
        allow update: if isTeamMember(teamId);
        allow delete: if isTeamLeader(teamId);
      }
      
      // Missioonilogide alamkogu
      match /missionLogs/{logId} {
        allow read: if isTeamMember(teamId);
        allow create: if isTeamMember(teamId);
      }
    }
    
    // Individuaalsed missioonilogid auditeerimiseks
    match /missionLogs/{logId} {
      allow create: if isAuthenticated();
      allow read: if isAuthenticated() && (
        request.auth.uid == resource.data.userId ||
        (resource.data.teamId != null && isTeamMember(resource.data.teamId))
      );
    }
  }
}
