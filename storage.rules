rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Missiooni tõendi fotod – kasutaja saab üles laadida vaid oma kausta
    match /quest-proofs/{userId}/{allPaths=**} {
      // Lubab lugeda: autenditud kasutaja näeb ainult oma fotosid
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // Lubab kirjutada: autenditud kasutaja saab laadida vaid oma kausta
      allow write: if request.auth != null 
                   && request.auth.uid == userId
                   && request.resource.size < 10 * 1024 * 1024  // 10MB piir
                   && request.resource.contentType.matches('image/.*');
    }
  }
}

